<div class="container">
  <h1>Cocktails from around the World</h1>
  <ul style="list-style: none">
    <% @cocktails.each do |cocktail| %>
      <li>
        <i class="fas fa-glass-martini"></i>
        <%= link_to cocktail.name, cocktail_path(cocktail.id) %>
      </li>
    <% end %>
  </ul>
  <p><%= link_to 'Add a Cocktail', new_cocktail_path, class: 'btn btn-success' %></p>
</div>

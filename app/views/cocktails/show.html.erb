<div class="container">
  <h1><%= @cocktail.name %></h1>
  <h3>How to make a good <%= @cocktail.name %> ?</h3>
  <ul>
    <% @cocktail.doses.each do |dose| %>
      <li>
        <%= dose.description %> | <%= dose.ingredient.name %>
        <%= link_to "<i class='far fa-trash-alt'></i>".html_safe, dose_path(dose), method: :delete %>
      </li>
    <% end %>
  </ul>
  <br>
  <%= link_to 'Add ingredients', new_cocktail_dose_path(@cocktail), class: 'btn btn-success' %>
  <%= link_to 'Back to cocktails list', cocktails_path, class: 'btn btn-danger' %>
</div>
